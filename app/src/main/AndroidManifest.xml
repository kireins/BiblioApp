<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kirei.biblioapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiblioApp">
        <activity android:name="com.kirei.biblioapp.domain.repository.DictionaryLocalRepository"></activity>
        <activity android:name="com.kirei.biblioapp.presentation.ui.activities.DictionaryActivity" />
        <activity android:name="com.kirei.biblioapp.presentation.ui.activities.DefinitionActivity" />
        <activity android:name="com.kirei.biblioapp.presentation.ui.activities.MainActivity" />
        <activity android:name="com.kirei.biblioapp.presentation.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>